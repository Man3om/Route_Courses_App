<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:padding="8dp"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/AndroidCourseImage"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:src="@drawable/copy_of_android"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AndroidCourseButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/AndroidCourseButton"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.94"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AndroidCourseImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/android_course"
        style="@style/ButtonsLabels"
        app:backgroundTint="@color/colorAccent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/IOSCourseImage"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:src="@drawable/copy_of_ios"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/IOSCourseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AndroidCourseButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/IOSCourseButton"
        style="@style/ButtonsLabels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.94"
        android:text="@string/ios_course"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IOSCourseImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/FullStackCourseImage"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/copy_of_fullstack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/FullStackCourseButton"
        app:layout_constraintTop_toBottomOf="@id/IOSCourseButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/FullStackCourseButton"
        style="@style/ButtonsLabels"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.94"
        android:layout_height="wrap_content"
        android:text="@string/full_stack"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FullStackCourseImage" />

</androidx.constraintlayout.widget.ConstraintLayout>